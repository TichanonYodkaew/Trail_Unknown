<Window x:Class="TrailUnknownLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrailUnknownLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="TrailUnknownLauncher" Height="576" Width="1080"
        ResizeMode="CanMinimize">

    <Grid>
        <Image Margin="-4,1,0,-2" Stretch="UniformToFill" Source="/overgrowncity.png"/>
        <TextBlock x:Name="VersionText" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" Foreground="White" Margin="10,0,0,507"/>
        <Button x:Name="PlayButton" Content="Checking Updates" Click="PlayButton_Click" Height="69" FontSize="28" FontWeight="Bold" Foreground="#DDFFFFFF" Margin="-4,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left" MinWidth="150" Background="#59E817" Padding="10,1,10,1" Width="1084"/>
        <Image Margin="124,182,124,130" Stretch="Fill" Source="Topic.png"/>
    </Grid>
</Window>
